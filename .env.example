# Database configuration
DATABASE_URL="file:/app/prisma/data/cardinet.db"

# JWT Secret (change this to a secure random string!)
JWT_SECRET="your-secure-jwt-secret-change-this"

# Set to 'true' to seed the database on startup
SEED_DATABASE=true

# Node environment
NODE_ENV=production

# Public site URL (used by Next.js)
NEXT_PUBLIC_SITE_URL="https://your-production-url.com"